<odoo>

    <!-- ========================= -->
    <!-- FEES LIST VIEW -->
    <!-- ========================= -->
    <record id="view_school_fees_list" model="ir.ui.view">
        <field name="name">school.fees.list</field>
        <field name="model">school.fees</field>
        <field name="arch" type="xml">
            <list string="Fees">
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="amount"/>
                <field name="paid_amount"/>
                <field name="due_amount"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- FEES FORM VIEW -->
    <!-- ========================= -->
    <record id="view_school_fees_form" model="ir.ui.view">
        <field name="name">school.fees.form</field>
        <field name="model">school.fees</field>
        <field name="arch" type="xml">
            <form string="Fees">

         <!--       
                <header>
                    <button name="action_school_fees_payments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money">
                        <field name="paid_amount"
                               widget="statinfo"
                               string="Paid"/>
                    </button>
                </header> -->

                <sheet>

                    <group>
                        <field name="student_id"/>
                        <field name="class_id"/>
                    </group>

                    <group string="Amounts">
                        <field name="amount"/>
                        <field name="paid_amount" readonly="1"/>
                        <field name="due_amount" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>

                    <group>
                        <field name="status" widget="statusbar"/>
                    </group>

                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="payment_mode"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- FEES ACTION -->
    <!-- ========================= -->
    <record id="action_school_fees" model="ir.actions.act_window">
        <field name="name">Fees</field>
        <field name="res_model">school.fees</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
