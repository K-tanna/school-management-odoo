<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!-- Class List View -->
    <!-- ========================= -->
    <record id="view_school_class_list" model="ir.ui.view">
        <field name="name">school.class.list</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <list string="Classes">
                <field name="name"/>
                <field name="grade"/>
                <field name="section"/>
                <field name="academic_year"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Class Form View -->
    <!-- ========================= -->
    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">   
                <sheet>
                                    <!-- SMART BUTTON -->
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_students"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-users">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Students</span>
                        </div>
                    </button>
                    <button name="action_view_fees"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money">
                        <field name="fees_count" widget="statinfo" string="Fees"/>
                    </button>
                </div>
                    <group>
                        <field name="name"/>
                        <field name="grade"/>
                        <field name="section"/>
                        <field name="academic_year"/>
                    </group>

                    <notebook>
                        <page string="Students">
                            <field name="student_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="roll_no"/>
                                    <field name="gender"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Class Action -->
    <!-- ========================= -->
    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
