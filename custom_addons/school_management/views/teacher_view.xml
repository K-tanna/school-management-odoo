<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!-- Teacher List View -->
    <!-- ========================= -->
    <record id="view_school_teacher_list" model="ir.ui.view">
        <field name="name">school.teacher.list</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="qualification"/>
                <field name="experience_years"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Teacher Form View -->
    <!-- ========================= -->
    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="qualification"/>
                        <field name="experience_years"/>
                    </group>

                    <group>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Teacher Action -->
    <!-- ========================= -->
    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
